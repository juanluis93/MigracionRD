{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter: Run Debug",
			"type": "shell",
			"command": "flutter",
			"args": [
				"run",
				"--debug"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$dart-dart_analyzer"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}